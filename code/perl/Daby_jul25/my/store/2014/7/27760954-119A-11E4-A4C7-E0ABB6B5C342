<p>boolean checkExpressionBalance (String expression)</p><p>{</p><p>    Deque<Character> expressionStack = new ArrayDeque<Character>();</p><p>    int i = 0;</p><p>    while (i < expression.length)</p><p>    {</p><p>        char currentChar = expression.charAt(i);</p><p>        if (currentChar=='(' || currentChar=='{' || currentChar=='[' ) {</p><p>            expressionStack.push(currentChar);</p><p>        }</p><p>       else if (currentChar==')' || currentChar=='}' || currentChar==']') {</p><p>            char previousBracket = expressionStack.pop();</p><p>            if (previousBracket == '(' && currentChar != ')') return false;</p><p>            else  if (previousBracket == '{' && currentChar != '}') return false;</p><p>            else  if (previousBracket == '[' && currentChar != ']') return false;</p><p>       }</p><p>    }</p><p>    if ( expressionStack.size() == 0) return true;</p><p>    return false;</p><p>}<br></p><p><br></p>
